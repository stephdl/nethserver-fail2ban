{
    use NethServer::Fail2Ban;
    my $port = ${'httpd-admin'}{TCPPort} || '980';
    my $maxretry = $fail2ban{HttpdAdmin_MaxRetry} || $fail2ban{MaxRetry} || '3';

    foreach (NethServer::Fail2Ban::listHttpdAdminJails()) {
        $OUT .= "[$_]\n";
        $OUT .= "enabled = true\n";
        $OUT .= "port = $port\n";
        $OUT .= "logpath = /var/log/httpd-admin/access_log\n";
        $OUT .= "maxretry = $maxretry\n\n";
    }
}
